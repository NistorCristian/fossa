{{!< default}}
{{!-- The tag above means: insert everything in this file
into the {body} of the default.hbs template --}}

{{!-- The big featured header, it uses blog cover image as a BG if available --}}
<header class="site-header outer {{#if @blog.cover_image}}" style="background-image: url({{@blog.cover_image}}){{else}}no-cover{{/if}}">
    <div class="inner">
        <div class="site-header-content">
            <h1 class="site-title">  
              {{@blog.title}}
            </h1>
            <h2 class="site-description">{{@blog.description}}</h2>
        </div>
        {{> "site-nav"}}
    </div>
</header>

{{#get "posts" limit="2" filter="featured:true"}}
    {{#if posts}}
        <div class="post-feed-featured-container">
            <div class="outer">
                <div class="inner">
                    <h3>Featured Articles</h3>
                    <div class="post-feed-featured">
                        {{#foreach posts}}
                            {{> "post-card"}}
                        {{/foreach}}
                    </div>
                </div>
            </div>
        </div>
    {{/if}}
{{/get}}

{{!-- The main content area --}}
<main id="site-main" class="site-main outer">
    <div class="inner">

        <div class="post-feed">
            {{!-- <article class="post-card post"></article> --}}
            {{#foreach posts}}

                {{!-- The tag below includes the markup for each post - partials/post-card.hbs --}}
                {{> "post-card"}}

                {{#is "home"}}
                    {{#has number="6"}}
                        <div class="subscribe-to-newsletter">
                            <div class="inner">
                                <div class="subtitle">Subscribe to our Newsletter</div>
                                <div class="title">OSS News and Insights</div>
                                <p>Delivered Straight to Your Inbox</p>
                                <form data-members-form>
                                    <input placeholder="your@email.com" data-members-email type="email" required="true"/>
                                    <button type="submit">Subscribe</button>
                                </form>
                            </div>
                        </div>
                    {{/has}}
                {{/is}}

            {{/foreach}}
        </div>

    </div>
</main>
